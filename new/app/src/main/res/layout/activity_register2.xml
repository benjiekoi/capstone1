<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.user.myapplication.Register2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Parents Information"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="145dp"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/cardView"
        android:layout_alignStart="@+id/cardView"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_fname"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_above="@+id/editText6"
        android:layout_alignEnd="@+id/cardView"
        android:layout_alignRight="@+id/cardView"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_fname"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText6"

        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="18dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_dob"
        android:ems="10"
        android:hint="Date"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="15dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_address"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:layout_below="@+id/editText7"
        android:layout_marginTop="15dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_contactnumber"
        android:ems="10"
        android:hint="Contac Number"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        android:onClick="buttonNextTwo"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Next"
                android:textColor="#fff"
                android:onClick="buttonNextTwo"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
